{
  "name": "@hyrious/wup",
  "type": "module",
  "version": "0.1.0",
  "description": "Zero-config TypeScript library bundler",
  "author": "hyrious <hyrious@outlook.com>",
  "license": "MIT",
  "repository": "hyrious/wup",
  "keywords": [
    "rollup",
    "typescript"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "dist/cli.js",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=20.8"
  },
  "scripts": {
    "build": "esbuild-dev --define:__VERSION__=0 src/cli.ts src/register.ts && node dist/cli.js src/register.ts",
    "test:install": "npm run build && npm i -g $(pnpm pack)"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "esbuild": "^0.21.4",
    "rollup": "^4.18.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@hyrious/configs": "^0.1.2",
    "@hyrious/esbuild-dev": "^0.10.6",
    "@types/node": "^20.12.12",
    "escalade": "^3.1.2",
    "sade": "^1.8.1"
  }
}
